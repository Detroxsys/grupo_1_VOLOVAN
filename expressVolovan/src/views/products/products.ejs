      <!-----------------------------------------------------------------------   PRODUCTOS  ----------------------->
      <main>
        <section class="principal-title">
          <h1 class="main-perfect-title">MENÃš</h1>
        </section>

        <section class="seccion-compra">
          <form action="/products/search" method="POST">
            <!-- nombre de producto -->
            <div class="create-fila">
              <div class="create-etiqueta">
                <label for="product_name" class="create-label">Nombre:</label>
              </div>
              <div class="create-campo">
                    <input type="text" id="product_name" name="product_name" placeholder="Ej: Volovan de ..."
                      class="create-input">
              </div>
            </div>
            <div class="fila-botones">
              <button class="create-botones" type="submit">Buscar producto</button>
              <% if (locals.isLogged  && locals.userLogged.esAdmin) { %>
                <a href="/products/create" class="action-button edit">CREAR PRODUCTO</a>
              <% } %>
            </div>
          </form>
        </section>


        <% categorias.forEach(categoria=> { %>
          <section class="seccion-compra">
            <h2 class="main-titulos">
              <%=categoria.nombre.toUpperCase()%>
            </h2>
            <%productos.filter(producto=>{return producto.id_categoria===categoria.id}).forEach(producto=>{%>
              <article class="product">
                <a href="/products/detail/<%=producto.id%>">
                  <img src="/images/products/<%=producto.imagen_nombre%>" alt="<%=producto.nombre%>"
                    class="img_product"></a>
                <h2>
                  <%=producto.nombre%>
                </h2>
                <div class="product_specific">
                  <i class="fas fa-shopping-cart"></i>
                  <p class="precio">$<%=toThousand(producto.precio)%>
                  </p>
                  <p class="descripcion">
                    <%=producto.descripcion%>
                  </p>
                </div>
              </article>
              <%})%>
          </section>
          <%})%>

            <!-- Navbar (sit on top) -->
            <%- include('../partials/footer'); %>


  </body>

</html>