<!DOCTYPE html>
<html lang="en">

<!-- head -->
<%- include('../partials/head'); %>
<!-- head -->

<body>

<!-- header -->
<%- include('../partials/headerLoginRegister'); %>
<!-- header -->
<main>

    <div class="register-box">
        <img src="/images/logoSinFondo.png" alt="" class="avatar">
        <h1>Registrarse</h1>

        <% if (locals.errors) { %>
            <% for( let oneError in errors ) { %>
                <p class="logRegError"><%= errors[oneError].msg  %> </p>
            <% } %>
        <% } %>


        <form  method="POST" action="/users/register" enctype="multipart/form-data">

            <% if (locals.oldData && oldData.name) { %>
                <input type="text" name="name" id="name" placeholder="Nombre" value="<%= oldData.name %>" required>
            <% } else { %>
                <input type="text" name="name" id="name" placeholder="Nombre" required>
            <% } %>
            <p id="nameError" class="error"> </p>

            <% if (locals.oldData && oldData.email) { %>
                <input type="email" name="email" id="email" placeholder="Correo electrónico" value="<%= oldData.email %>" required>
            <% } else { %>
                <input type="email" name="email" id="email" placeholder="Correo electrónico" required >
            <% } %>
            <p id="emailError" class="error"> </p>

            <% if (locals.oldData && oldData.password) { %>
                <input type="password" name="password" id="password" placeholder="Contraseña" required>
            <% } else { %>
                <input type="password" name="password" id="password" placeholder="Contraseña" required>
            <% } %>
            <p id="passwordError" class="error"> </p>

            <label for="profile-image">Imagen de perfil</label>
            <input type="file" name="avatar" id="avatar" class="profile-image" accept="image/png, image/jpeg, image/jpg, image/gif" required>
            <p id="avatarError" class="error"> </p>
            
            <input type="submit" value="Registrarse" >
            <a href="/users/login">¿Ya tienes cuenta? Inicia sesión</a>
        </form>
    </div>
    <section class="bloque-compensacion-2"></section>
    
</main>
 <!-- Footer -->
 <%- include('../partials/footer'); %>
 <script src="/script/scriptRegister.js"></script> 
</body>
</html>