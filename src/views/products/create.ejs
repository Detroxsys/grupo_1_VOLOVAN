<!DOCTYPE html>
<html lang="en">
    <!-- Navbar (sit on top) -->
    <%- include('../partials/head'); %>
<body>
    <%- include('../partials/header'); %>

    <div class="create-container">
        <h2 class="create-h2"><i class="fas fa-utensils"></i> Agregar nuevo producto</h2>
        <form action="/products/create" method="POST" enctype = "multipart/form-data">

            <div class="create-fila">
                <div class="create-etiqueta">
                    <label for="product_name" class="create-label">Nombre:</label>
                </div>
                <div class="create-campo">
                    <input type="text" id="product_name" name="product_name" placeholder="Ej: Volovan de ..." class="create-input">
                </div>
            </div>

            <div class="create-fila">
                <div class="create-etiqueta">
                    <label for="product_price" class="create-label">Precio:</label>
                </div>
                <div class="create-campo">
                    <input type="number" id="product_price" name="product_price" placeholder="Ej: 10.00" class="create-input">
                </div>
            </div>

            <div class="create-fila">
                <div class="create-etiqueta">
                    <label for="product_description" class="create-label">Descipción:</label>
                </div>
                <div class="create-campo">
                    <textarea name="product_description" id="product_description" placeholder="¿De qué trata tu producto? Describe a detalle tu producto en esta área" class="create-textarea"></textarea>
                </div>

            </div>

            <div class="create-fila">
                <div class="create-etiqueta">
                    <label for="category" class="create-label">Categoría:</label>
                </div>
                <div class="create-campo">
                    <select name="category" id="category" class="create-input">
                        <option value="null">Elegir opción</option>
                        <option value="salados">Salados</option>
                        <option value="dulces">Dulces</option>
                        <option value="especiales">Especialidades</option>
                        <option value="postres">Postres</option>
                    </select>
                </div>
            </div>
            
            <div class="create-fila">
                <div class="create-etiqueta">
                    <label for="productImage" class="create-label">Imagen del producto:</label>
                </div>
                <div class="create-campo">
                    <input type="file" name="productImage" id="productImage" class="create-file" required>
                </div>
            </div>

            <div class="fila-botones">
                <button class="create-botones" type="submit">Agregar producto</button>
                <button class="create-botones" type="reset" >Reestablecer</button>
            </div>

        </form>
    </div>


    <!-- Footer -->
    <%- include('../partials/footer'); %>   
</body>
</html>