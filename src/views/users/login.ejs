<!DOCTYPE html>
<html lang="en">

<!-- head -->
       <%- include('../partials/head'); %>
<!-- head -->

<body>

<!-- header -->
<%- include('../partials/headerLoginRegister'); %>
<!-- header -->
<main>
    <div class="login-box">
        <img src="/images/logoSinFondo.png" alt="" class="avatar">
        <h1>Inicia sesión</h1>
        <% if (locals.errors && errors.email) { %>
                <p class="logRegError"><%= errors.email.msg  %> </p>
        <% } %>
        <form method="POST" action="/users/login">
            <input type="email" name="email" placeholder="Correo electrónico" required>
            <input type="password" name="password" placeholder="Contraseña" required>
            <input type="submit" value="Ingresar">
            <a href="/users/register">¿No tienes cuenta? Regístrate</a><br>
            <a href="#">¿Olvidaste tu contraseña?</a>
        </form>
    </div>
    <section class="bloque-compensacion-2"></section>
</main>
 <!-- Footer -->
 <%- include('../partials/footer'); %>
</body>
</html>