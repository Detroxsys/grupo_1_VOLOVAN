<!DOCTYPE html>
<html lang="en">

<!-- head -->
       <%- include('../partials/head'); %>
<!-- head -->

<body>

<!-- header -->
<%- include('../partials/headerLoginRegister'); %>
<!-- header -->
<main>
    <div class="login-box">
        <img src="/images/logoSinFondo.png" alt="" class="avatar">
        <h1>Inicia sesión</h1>
        <% if (locals.errors) { %>
            <% for( let oneError in errors ) { %>
                <p class="logRegError"><%= errors[oneError].msg  %> </p>
            <% } %>
        <% } %>
        <form method="POST" action="/users/login">
            <% if (locals.oldData && oldData.email) { %>
                <input type="email" name="email" placeholder="Correo electrónico" value="<%= oldData.email %> ">
            <% } else { %>
                <input type="email" name="email" placeholder="Correo electrónico" >
            <% } %>
            <input type="password" name="password" placeholder="Contraseña" ><br>
            <div style="display: flex;">
                <input type="checkbox" id="saveLogin" style="width: auto; margin-right: 10px;"><label for="saveLogin">Recordarme</label>
            </div>
                <input type="submit" value="Ingresar">
            <a href="/users/register">¿No tienes cuenta? Regístrate</a><br>
            <a href="#">¿Olvidaste tu contraseña?</a>
        </form>
    </div>
    <section class="bloque-compensacion-2"></section>
</main>
 <!-- Footer -->
 <%- include('../partials/footer'); %>
</body>
</html>