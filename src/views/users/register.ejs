<!DOCTYPE html>
<html lang="en">

<!-- head -->
<%- include('../partials/head'); %>
<!-- head -->

<body>

<!-- header -->
<%- include('../partials/headerLoginRegister'); %>
<!-- header -->
<main>

    <div class="register-box">
        <img src="/images/logoSinFondo.png" alt="" class="avatar">
        <h1>Registrarse</h1>
        <form action="#">
            <input type="text" name="name" placeholder="Nombre" required>
            <input type="email" name="email" placeholder="Correo electrónico" required>
            <input type="password" name="password" placeholder="Contraseña" required>
            <input type="password" name="repeat-password" placeholder="Repetir contraseña" required>
            <label for="profile-image">Imagen de perfil</label>
            <input type="file" name="profile-image" id="profile-image" class="profile-image" required>
            <input type="submit" value="Ingresar">
            <a href="/users/login">¿Ya tienes cuenta? Inicia sesión</a>
        </form>
    </div>
    <section class="bloque-compensacion-2"></section>
    
</main>
 <!-- Footer -->
 <%- include('../partials/footer'); %>

</body>
</html>