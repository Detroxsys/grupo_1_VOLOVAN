<!DOCTYPE html>
<html lang="en">

<!-- head -->
<%- include('../partials/head'); %>
<!-- head -->

<body>

<!-- header -->
<%- include('../partials/headerLoginRegister'); %>
<!-- header -->
<main>

    <div class="register-box">
        <img src="/images/logoSinFondo.png" alt="" class="avatar">
        <h1>Registrarse</h1>
        <% if (locals.errors) { %>
            <% for( let oneError in errors ) { %>
                <p><%= errors[oneError].msg  %> </p>
            <% } %>
        <% } %>


        <form method="POST" action="/users/register" enctype="multipart/form-data">

            <input type="text" name="name" placeholder="Nombre">
            <input type="email" name="email" placeholder="Correo electrónico" >
            <input type="password" name="password" placeholder="Contraseña" >
            <input type="password" name="repeat-password" placeholder="Repetir contraseña" >
            <label for="profile-image">Imagen de perfil</label>
            <input type="file" name="avatar" id="avatar" class="profile-image" >
            
            <input type="submit" value="Ingresar">
            <a href="/users/login">¿Ya tienes cuenta? Inicia sesión</a>
        </form>
    </div>
    <section class="bloque-compensacion-2"></section>
    
</main>
 <!-- Footer -->
 <%- include('../partials/footer'); %>

</body>
</html>